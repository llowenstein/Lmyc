@model IEnumerable<LmycWeb.Models.Boat.Boat>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@{
    ViewData["Title"] = _localizer["Boats"];
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @_localizer["BoatName"]
            </th>
            <th>
                @_localizer["Picture"]
            </th>
            <th>
                @_localizer["LengthInFeet"]
            </th>
            <th>
                @_localizer["Make"]
            </th>
            <th>
                @_localizer["Year"]
            </th>
            <th>
                @_localizer["RecordCreationDate"]
            </th>
            <th>
                @_localizer["User"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BoatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Picture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LengthInFeet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecordCreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BoatId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BoatId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BoatId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
